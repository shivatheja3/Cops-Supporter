<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">
        New Complaint
    </h1>
    <div class="col-6 offset-3">
        <form action="/roadViolations" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" name="title" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <input type="file" name="image" id="" multiple>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url:</label>
                <input class="form-control" type="text" name="image" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="image">Vehcile No.</label>
                <input class="form-control" type="text" name="veh_num" id="veh_num" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Location">Location:</label>
                <input class="form-control" type="text" name="location" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Your name:</label>
                <input class="form-control" type="text" name="uploader_name" id="name" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="email" name="uploader_email" id="email" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Status:</label>
                <input type="number" class="form-control" name="statusOfChallan" id="status" required value="0" readonly>
            </div>
            <div class="mb-3"><button class="btn btn-success">
                Save
            </button></div>
            
        </form>
        <a href="/roadViolations"><div class="mb-3"><button class="btn btn-primary">Go back</button></a>
        
    </div>
</div>
    
